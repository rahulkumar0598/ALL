@model BookEventModel;
@{

    Layout = "_EventLayout";
}
<!--Adding Layout and Model to the view of creating new events-->
<div style="width:80%;margin-left:5%;">
    @using (Html.BeginForm("CreateEvent", "BookEvent", FormMethod.Post))
    {
        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Eventid, htmlAttributes: new { @class = "fs-5" })


            @Html.EditorFor(model => model.Eventid, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Eventid, "", new { @class = "text-danger" })

        </div>
        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "fs-5" })


            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })

        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.DateOfEvent, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.DateOfEvent, new { htmlAttributes = new { @class = "form-control datepicker " } })
            @Html.ValidationMessageFor(model => model.DateOfEvent, "", new { @class = "text-danger" })
        </div>


        <div class="form-group mb-3">

            @Html.LabelFor(model => model.EventLocation, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.EventLocation, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EventLocation, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control timepicker " } })
        </div>


        <div class="form-group mb-3">

            @Html.LabelFor(model => model.EventType, htmlAttributes: new { @class = "fs-5" })


            <div>@Html.RadioButtonFor(model => model.EventType, "public", new { htmlAttributes = new { @class = "form-control " } }) Public</div>
            <div>@Html.RadioButtonFor(model => model.EventType, "private", new { htmlAttributes = new { @class = "form-control " } }) Private</div>

        </div>


        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "fs-5" })
            @Html.EditorFor(model => model.Duration, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.EventDescription, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.EventDescription, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="form-group mb-3">

            @Html.LabelFor(model => model.Otherdetails, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.Otherdetails, new { htmlAttributes = new { @class = "form-control" } })
        </div>


        <div class="form-group mb-4">

            @Html.LabelFor(model => model.InviteUsers, htmlAttributes: new { @class = "fs-5" })

            @Html.EditorFor(model => model.InviteUsers, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="row mb-5" style="margin-left:5px;">
            <button type="submit" class="btn btn-success fs-5 ps-5 pe-5 ">Create</button>
        </div>
    }
</div>
